<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
    />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <title>Flights</title>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <ul class="nav justify-content-center">
        <li class="nav-item">
          <a class="nav-link active" href="/flights">All Flights</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/flights/new">Add Flights</a>
        </li>
      </ul>
    </nav>
    <h1>Flight List</h1>

    <table class="table table-hover">
      <thead>
        <tr>
          <th scope="col">Airline</th>
          <th scope="col">Airport</th>
          <th scope="col">Flight #</th>
          <th scope="col">Date</th>
          <th scope="col">Time</th>
          <th scope="col">Details</th>
        </tr>
      </thead>
      <tbody>
        <% flights.forEach(function(el) { %>
        <tr>
          <th scope="row"><%=el.airline%></th>
          <td><%=el.airport%></td>
          <td><%=el.flightNo%></td>
          <td><%=el.departs.toLocaleDateString()%></td>
          <td><%=el.departs.toLocaleTimeString('en-US')%></td>
          <td>
            <a href="/flights/<%= el.id %>"
              ><button type="button" class="btn btn-info">Details</button></a
            >
          </td>
        </tr>
        <% }); %>
      </tbody>
    </table>
  </body>
</html>
